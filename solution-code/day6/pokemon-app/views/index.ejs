<!DOCTYPE html>
<html>
    <body>
        <h1>Pokemon Homepage</h1>

        <nav>
            <a href="/pokemon/new">Create new Pokemon</a>
        </nav>

        <% for(let i=0; i<pokemon.length; i++){ %>

            <a href="/pokemon/<%=pokemon[i].id%>"><img src=<%=pokemon[i].img%> /></a>

            <form action="/pokemon/<%=pokemon[i].id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" />
            </form>
            <a href="/pokemon/<%=pokemon[i].id%>/edit">Edit</a>
            <br><br>
        <% } %>
    </body>
</html>